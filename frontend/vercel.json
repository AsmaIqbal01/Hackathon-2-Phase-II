{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "env": {
    "NEXT_PUBLIC_API_URL": {
      "description": "Backend API URL (Render deployment URL + /api)",
      "value": "https://your-backend-name.onrender.com/api"
    }
  }
}
